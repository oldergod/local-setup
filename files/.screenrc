escape ^Xx
startup_message off
defscrollback 30000

bind j focus down
bind k focus up
bind h focus left
bind l focus right

bind + resize +5
bind - resize -5
bind = resize =

bindkey "^[[1;5D" prev  # change window with ctrl-left
bindkey "^[[1;5C" next  # change window with ctrl-right

hardstatus on
hardstatus alwayslastline
hardstatus string '%{= kG}[%{G}%H%? %1`%?%{g}][%= %{= kw}%-w%{+b yk} %n*%t%?(%u)%? %{-}%+w %=%{g}][%{B}%m/%d %{W}%C%A%{g}]'
